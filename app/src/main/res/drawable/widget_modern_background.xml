<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow/Elevation effect -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#40000000"
                android:endColor="#10000000" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Main background with glassmorphism effect -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <!-- Dark translucent background -->
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#E6101218"
                android:centerColor="#E61A1E2E"
                android:endColor="#E6242946" />
            
            <!-- Rounded corners -->
            <corners android:radius="28dp" />
            
            <!-- Subtle border for glassmorphism -->
            <stroke
                android:width="1.5dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>
    
    <!-- Subtle inner glow -->
    <item 
        android:top="1dp" 
        android:left="1dp" 
        android:right="3dp" 
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:centerColor="#20FFFFFF"
                android:endColor="#00FFFFFF" />
            <corners android:radius="27dp" />
        </shape>
    </item>
    
</layer-list> 