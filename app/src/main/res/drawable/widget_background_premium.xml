<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer -->
    <item
        android:left="0dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#40000000"
                android:endColor="#00000000" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Main background with glass morphism -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            
            <!-- Modern dark gradient -->
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FF1a1a2e"
                android:centerColor="#FF16213e"
                android:endColor="#FF0f3460" />
            
            <!-- Glass morphism border -->
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" />
            
            <!-- Modern rounded corners -->
            <corners android:radius="18dp" />
            
        </shape>
    </item>
    
    <!-- Inner glow overlay -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:startColor="#22FFFFFF"
                android:endColor="#00FFFFFF" />
            <corners android:radius="17dp" />
        </shape>
    </item>
    
</layer-list> 