<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme popup menu style -->
    <style name="PopupMenuDark" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/dark_surface</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
    </style>

    <!-- Dark theme toolbar popup style -->
    <style name="ThemeOverlay.AppCompat.Dark.PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/dark_surface</item>
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        <item name="android:popupBackground">@color/dark_surface</item>
    </style>
</resources>
