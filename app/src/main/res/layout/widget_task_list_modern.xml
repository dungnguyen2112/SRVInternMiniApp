<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header with title and update time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tasks sắp đến hạn"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:drawableStart="@android:drawable/ic_menu_agenda"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/widget_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật: --:--"
            android:textSize="10sp"
            android:textColor="#CCFFFFFF"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- Task list content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/widget_task_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đang tải tasks..."
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:lineHeight="18dp"
            android:minHeight="60dp"
            android:gravity="top"
            android:scrollbars="vertical" />

    </ScrollView>

    <!-- More tasks indicator -->
    <TextView
        android:id="@+id/widget_more_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10sp"
        android:textColor="#CCFFFFFF"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="4dp" />

</LinearLayout>
