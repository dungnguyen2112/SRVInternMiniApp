<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/checkbox_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center_vertical"
            android:buttonTint="@color/primary_blue"
            android:scaleX="1.1"
            android:scaleY="1.1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 1. TITLE (ở trên cùng) -->
            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 2. TOPIC (ở giữa) -->
            <TextView
                android:id="@+id/text_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOPIC"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/text_on_primary"
                android:background="@drawable/topic_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone" />

            <!-- 3. TIME (ở dưới cùng) -->
            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-01-01"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:gravity="center_vertical"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="6dp"
                android:drawableTint="@color/text_secondary" />

            <!-- Description TextView - HIDDEN -->
            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Description"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:visibility="gone" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6dp"
            android:background="@drawable/delete_button_background"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Delete task"
            app:tint="@color/error_red"
            android:padding="8dp"
            android:scaleType="centerInside" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
