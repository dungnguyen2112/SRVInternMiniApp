<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/checkbox_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_gravity="top"
            android:layout_marginTop="2dp"
            android:buttonTint="@color/primary_blue"
            android:scaleX="1.1"
            android:scaleY="1.1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 1. TITLE (ở trên cùng) -->
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="6dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />

            <!-- 2. TOPIC (ở giữa) -->
            <TextView
                android:id="@+id/text_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOPIC"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/text_on_primary"
                android:background="@drawable/topic_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginBottom="8dp"
                android:visibility="visible" />

            <!-- 3. TIME (ở dưới cùng với icon căn chỉnh) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    android:layout_marginEnd="6dp"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-01-01"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Description TextView - Now visible -->
            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Description"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <!-- Tags -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexboxTaskTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:flexWrap="wrap"
                app:alignItems="flex_start"
                app:justifyContent="flex_start"
                android:visibility="gone" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@drawable/delete_button_background"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Delete task"
            android:scaleX="0.9"
            android:scaleY="0.9" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
