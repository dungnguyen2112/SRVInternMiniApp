<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo Tag Mới"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="16dp" />

    <!-- Tag Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Tên tag"
        app:boxStrokeColor="?attr/colorPrimary"
        app:hintTextColor="?attr/colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNewTagName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionDone" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Color Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn màu:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="12dp" />

    <!-- Color Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvColorPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Preview -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/tag_chip_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview:"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginEnd="12dp" />

        <View
            android:id="@+id/viewPreviewColor"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_background" />

        <TextView
            android:id="@+id/tvPreviewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag Name"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary" />

    </LinearLayout>

    <!-- Dialog Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancelCreateTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:background="@android:color/transparent"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnConfirmCreateTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo Tag"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout> 